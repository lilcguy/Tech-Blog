<h1>INDIVIDUAL POST</h1>


    <h1>Created on: {{format_date post.date}}</h1>
    <h1>{{post.user.name}}</h1>
    <h1>{{post.title}}</h1>
    <h1>{{post.contents}}</h1>

    <h1>Comments</h1>
        {{#each post.comments}}
            <h2>{{format_date this.date}}</h2>
            <h2>{{this.contents}}</h2>
        {{/each}}

