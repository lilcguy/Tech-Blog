<h1>HOMEPAGE</h1>

{{#each posts as |post|}}
<a href="/posts/{{post.id}}">{{post.title}}</a>
    <h1>{{post.user.name}}</h1>
    <h1>{{post.title}}</h1>
    <h1>{{post.contents}}</h1>
    <h1>Comments</h1>
    <h2>{{post.comment.contents}}</h2>
{{/each}} 

